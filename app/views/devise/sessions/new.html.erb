<% provide(:title, "Log In") %>

<div class="container text-center">
  <div class="row">
    <div class="section-title col-lg-12">
      <h2><b>Login</b></h2>
    </div>
  </div>

  <div class="row margin-bottom-30">
    <div class="col-lg-4 col-lg-offset-4">
      <p class="alert-text"><%= alert %></p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.email_field :email, :placeholder => "Email", class: "form-control form-input-lg" %>
        </div>

        <div class="field">
          <%= f.password_field :password, :placeholder => "Password", class: "form-control form-input-lg" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field float-left" id="remember-me-input">
            <%= f.check_box :remember_me %>&nbsp;&nbsp;
            <%= f.label :remember_me %>
          </div>
        <% end %>
        
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success btn-lg"%>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row margin-bottom-30">
    <div class="col-lg-12">
      <b>
        <h4>or sign in with:</h4>
        <ul class="footer-social">
          <li><%= button_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "FacebookButton", :method => :get  %></li>
          <li><%= button_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), :class => "TwitterButton", :method => :get  %></li>
          <li><%= button_to "Sign in with Google+", user_omniauth_authorize_path(:google_oauth2), :class => "GoogleButton", :method => :get  %></li>
        </ul>
        <h4><%= render "devise/shared/links" %></h4>
      </b>
    </div>
  </div>
</div>