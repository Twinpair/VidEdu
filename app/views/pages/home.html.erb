    <section id="tf-contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Contact Us</h2>
                    <h5>(Please fill out all fields or else suggestion wont be recorded)</h5>

                </div>
            </div>

        <%= form_for @suggestion do |f| %>
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.label :name %>*<br />
            <%= f.text_field :name, :type => "text", :class => "form-control", :placeholder => "Name", :id => "name"%>
            </div>
          </div>
          <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <%= f.label :email %>*<br />
                <%= f.text_field :email, :type => "email", :class => "form-control", :placeholder => "Email Address", :id => "email" %>
              </div>
          </div>
           <div class="row control-group">
              <div class="form-group col-xs-12 floating-label-form-group controls">
                <%= f.label :suggestion %>*<br />
                <%= f.text_area :suggestion, :rows => "5", :class => "form-control", :placeholder => "Suggestion", :id => "message" %>
                <p class="help-block text-danger"></p>
              </div>
          </div>

          <div class="row">
            <div class="form-group col-xs-12">
              <%= f.submit "Submit", :action => "pages/home", :type => "submit", :class => "btn btn-success btn-lg" %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

