<% provide(:title, "Home") %>

<% content_for :head do %>
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,700,300,600,800,400">
<% end %>

<div id="homepage">
    <!-- Navigation -->
    <nav id="tf-menu" class="navbar navbar-default navbar-fixed-top" id="home-page-nav">
      <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "VidEdu", root_path, class: "navbar-brand" %>
          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
              <li><a href="#tf-home" class="page-scroll">Home</a></li>
              <li><%= link_to "Explore Videos", videos_path %></li>
              <li><%= link_to "Explore Subjects", subjects_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Your Content<span class="caret"></span></a>
                <ul class="dropdown-menu">  
                  <li><%= link_to "Add Video", new_video_path %></li>
                  <li><%= link_to "Add Subject", new_subject_path %></li>
                  <li><%= link_to "Your Videos", your_videos_path %></li>
                  <li><%= link_to "Your Subjects", your_subjects_path %></li>
                </ul>
              </li>
              <li>
                <%= form_tag search_path, method: :get, class: "navbar-form", role:"search" do %>
                  <%= text_field_tag :search, params[:search], class: "form-control" %>
                  <%= submit_tag "Search", name: nil, class: "btn btn-success" %>
                <% end %>  
              </li>
              <li><%= link_to "Account", edit_user_registration_path %></li>
              <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>
          <% else %>
              <li><a href="#tf-home" class="page-scroll mobile-link" >Home</a></li>
              <li><a href="#tf-about" class="page-scroll mobile-link">About</a></li>
              <li><a href="#tf-team" class="page-scroll mobile-link">Team</a></li>
              <li><a href="#tf-services" class="page-scroll mobile-link">Feedback</a></li>
              <li><a href="#tf-clients" class="page-scroll mobile-link">FAQS</a></li>
              <li><a href="#tf-contact" class="page-scroll mobile-link" >Contact</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Explore<span class="caret"></span></a>
                <ul class="dropdown-menu">  
                  <li><%= link_to "Explore Videos", videos_path %></li>
                  <li><%= link_to "Explore Subjects", subjects_path %></li>
                </ul>
              </li>
              <li><%= link_to "Try it!", new_video_path %></li>
              <li>
                <%= form_tag search_path, method: :get, class: "navbar-form", role:"search" do %>
                  <%= text_field_tag :search, params[:search], class: "form-control" %>
                  <%= submit_tag "Search", name: nil, class: "btn btn-success" %>
                <% end %>  
              </li>
              <li><%= link_to "Login", new_user_session_path %></li>
              <li><%= link_to "Signup", new_user_registration_path %></li>
          <% end %>
            </ul>
          </div>
        </div>
      </nav>

      <!-- Header -->
      <div id="tf-home" class="text-center">
        <div class="overlay">
          <div class="content">
            <div class="header alt vert">
              <div class="container">
                <div class="col-md-12 text-center">
                  <h1>Learning, <span class="emphasize">one </span>clip at a time...</h1>
                <% if !user_signed_in? %>
                  <p class="text-center">
                    <%= link_to "TRY IT NOW!", new_video_path, :class=>'homeButton' %>
                  </p>
                <%else%>
                  <%= link_to "Add Video", new_video_path, :class=>'homeButton' %>
                <%end%>
                </div>
              </div>
            </div>
            <a href="#tf-about" class="fa fa-angle-down page-scroll"></a>
          </div>
        </div>
      </div>

      <!-- About -->
      <div id="tf-about" class="text-center">
        <div class="featurette" id="sec2">
          <div class="container">
            <div class="row">
              <div class="col-md-12 text-center">
                <div class="section-title center">
                  <h1>VidEdu is <span class="emphasize"><strong>simple </strong></span>to use!</h1>
                  <div class="line">
                    <hr>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-2 col-md-offset-2 text-center">
                <div class="featurette-item">
                  <i class="fa fa-film" aria-hidden="true" id="film-icon"></i>
                  <h4>1. Find a video</h4>
                  <p>Any video from Youtube that you want to learn from</p>
                </div>
              </div>
              <div class="col-md-2 text-center">
                <div class="featurette-item">
                  <i class="fa fa-exchange" aria-hidden="true" id="copy-icon"></i>
                  <h4>2. Copy the URL</h4>
                  <p>Once you find your video just paste the URL onto VidEdu</p>
                </div>
              </div>
              <div class="col-md-2 text-center">
                <div class="featurette-item">
                  <i class="fa fa-file-text-o" aria-hidden="true" id="note-icon"></i>
                  <h4>3. Take Notes</h4>
                  <p>Once submitted, you can begin taking notes</p>
                </div>
              </div>
              <div class="col-md-2 text-center">
                <div class="featurette-item">
                  <i class="fa fa-fire" aria-hidden="true" id="learn-icon"></i>
                  <h4>4. Start learning</h4>
                  <p>You can then save your notes for later, and even download them to your local drive </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Team -->
      <div id="tf-team" class="text-center">
        <div class="overlay">
          <div class="container">
            <div class="section-title center">
              <h1>Meet our <span class="emphasize"><strong>team</strong></span></h1>
              <div class="line"><hr></div>
            </div>
            <div id="team" class="owl-carousel owl-theme row">
              <div class="item">
                <div class="thumbnail">
                  <%= image_tag("jon.jpg", :class => "img-circle team-img") %>
