<div class="col-md-4">
    <div class="yt_video thumbnail">
      <div class="text-center">
        <p><%= video.private? ? "(Private)" : "(Public)" if @display_private_status%></p>
        <div class="panel-heading"><h4><%= truncate video.title, length: 65 %></h4></div> 
      </div>
      <br>
      <!-- Need to change this to the "edit" page -->
      <%= link_to image_tag("https://img.youtube.com/vi/#{video.uid}/mqdefault.jpg", alt: video.title,), video_path(video.id), target: '_self' %>
      <div class="caption">

        <p><strong>Updated:</strong> <%=video.updated_at.strftime('%B %-d %Y') %></p>

      <% unless video.subject.default_subject? %>
        <p><strong>Subject: </strong><%= link_to video.subject.subject, subject_path(video.subject_id) %></p>
      <% else %>
        <p><strong>Subject: </strong>None</p>
      <% end %>

      <% if user_signed_in? && video.user_id == current_user.id %>
        <div><strong>Created by:</strong> <i>You!</i></div>
      <% else %>
        <div><strong>Created by:</strong> <i><%= User.find(video.user_id).username %></i></div>
      <% end %>
        <br>

      <% if current_user %>
        <% if video.user_id == current_user.id %>
          <div class = "trash_and_edit">
            <%= link_to 'Edit' ,edit_video_path(video.id),:class=>"glyphicon glyphicon-edit",:id=>'edit' %> |
            <%= link_to 'Delete', video, method: :delete, data: { confirm: 'Are you sure?'}, :class=>"glyphicon glyphicon-trash" %>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>