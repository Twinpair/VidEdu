<% provide(:title, "Search") %>

<div class="container">
    <div class="row">
      <div class="text-center col-lg-12">
        <h1><b><%= params[:search].empty? ? "All Videos" : "Search ('#{params[:search]}')" %></b></h1><br>
      </div>
    </div>
  </div>

  <div class="container">
    <div id="player-wrapper"></div>
    <div class="row">
      <%= render 'videos/sort' if !@videos.empty?%>
      <br>
      <%= render @videos %>
    </div>
  </div>