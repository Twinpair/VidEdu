  <style type="text/css">
    @import url(https://fonts.googleapis.com/css?family=Voltaire);

    #button_search{
      width: 25%;
    }
    #white{
      color: white;
    }
    #orange{
      color: orange;
    }
    #tf-menu{
      background: #222222;
      border-color: #222222;
      border-radius: 0px;
      margin-bottom: 0px;
      font-size: 12px;
      text-transform: uppercase;
      font-family: 'Voltaire',Arial,sans-serif;
      letter-spacing: 2px;
    }
  </style>

  <!-- Navigation -->
  <nav id="tf-menu" class="navbar navbar-default navbar-top">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>        
        <%= link_to "VidEdu", root_path, class: "navbar-brand", :id => "white" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Home", root_path, :id => "white" %></li>
          <li><%= link_to "Featured", featured_path, :id => "white" %></li>
          <li><%= link_to "Add Subject", new_subject_path, :id => "white" %></li>
          <li><%= link_to "Your Subjects", subjects_path, :id => "white" %></li>
          <li><%= link_to "Add Video", new_video_path, :id => "white" %></li>
          <li><%= link_to "Your Videos", videos_path, :id => "white" %></li>
          <%= form_tag search_videos_path, method: :get, class: "navbar-form navbar-right", role:"search" do %>
            <li>
              <%= text_field_tag :search, params[:search], class: "form-control" %>
              <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
            </li>
          <% end %>
          <li><p style = "color: orange;" class="navbar-text"><%= link_to "Account", edit_user_registration_path, {:style =>"color: orange; text-decoration: none;"} %></p></li>
          <li><%= link_to "Log out", destroy_user_session_path, :method => :delete, :id => "orange" %></li>
        <% else %>
          <li><%= link_to "Home", root_path,:id => "white" %></li>
          <li><%= link_to "About", root_path + '#tf-about',:id => "white" %></li>
          <li><%= link_to "Team", root_path + '#tf-team',:id => "white" %></li>
          <li><%= link_to "Feedback", root_path + '#tf-services',:id => "white" %></li>
          <li><%= link_to "FAQS", root_path + '#tf-clients',:id => "white" %></li>
          <li><%= link_to "Contact", root_path + '#tf-contact',:id => "white" %></li>
          <li><%= link_to "Featured", featured_path,:id => "white" %></li>
          <li><%= link_to "Try it!", new_video_path,:id => "white" %></li>
           <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Login", new_user_session_path,:id => "orange" %></li>
            <li><%= link_to "Signup", new_user_registration_path,:id => "orange" %></li>
           </ul> 
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
