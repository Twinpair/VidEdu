<% provide(:title, "All Subjects") %>

<div class="container">
    <div class="row">
      <div class="text-center col-lg-12">
        <h1><b>All Subject Playlists</b></h1>
        <h3>Explore subject playlist from other users</h3>
        <h4><%= page_entries_info @subjects %></h4>
      </div>
    </div>
  </div>

  <div class="container text-center">
    <%= form_tag subjects_path, method: :get do %>
      <%= render 'shared/sort_selection' %>
    <% end %><br>

    <div class="row">
      <%= render @subjects %>
      <div class="container">
        <div class="row">
          <div class="col-lg-12 digg_pagination">
            <%= will_paginate @subjects %>
          </div>
        </div>
      </div>
    </div>
  </div>